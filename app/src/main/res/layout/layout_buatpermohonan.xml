<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/lay_buatpermohonan"
              android:padding="@dimen/dimen_16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/dimen_8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            style="@style/EditText.Form"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_instansi"
                android:inputType="text"
                android:layout_width="match_parent"
                style="@style/EditText.Form"
                android:hint="Instansi Tempat Permohonan"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_width="match_parent"
            style="@style/EditText.Form"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_negaratujuan"
                android:inputType="text"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="match_parent"
                style="@style/EditText.Form"
                android:hint="Negara Tujuan"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_16dp"
              android:textColor="@color/colorPrimary"
              android:text="Daftar Dokumen"
              style="@style/Text.TitleField.Bold"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            style="@style/EditText.Form"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_dokumen"
                android:inputType="text"
                android:drawableRight="@drawable/ic_add_black_24dp"
                android:layout_width="match_parent"
                style="@style/EditText.Form"
                android:hint="Tambah Dokumen"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                   android:id="@+id/rv_dokumen"
                                                   android:layout_marginTop="@dimen/dimen_12dp"
                                                   android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>