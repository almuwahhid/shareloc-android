<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_2dp"
        android:layout_marginRight="@dimen/dimen_2dp"
        android:background="@drawable/field_filled"
        android:padding="1dp"
        tools:context="id.akakom.bimo.shareloc.app.adapters.DokumenSayaAdapter">
    <RelativeLayout android:layout_width="match_parent"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/bg_dokumen"
                    android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:background="@drawable/bg_dokumen_right"
                        android:padding="@dimen/dimen_16dp"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      style="@style/Text.Title.OneRow"
                      android:id="@+id/tv_title"
                      android:text="Surat Kuasa"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:id="@+id/img_delete"
                       android:tint="@color/grey_700"
                       style="@style/clickable"
                       android:src="@drawable/ic_close_black_24dp"
                       android:layout_centerVertical="true"
                       android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
