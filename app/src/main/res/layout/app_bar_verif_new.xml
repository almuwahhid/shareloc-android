<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/dimen_16dp"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                               android:layout_gravity="center_horizontal"
                                               app:contentPadding="@dimen/dimen_16dp"
                                               android:id="@+id/card_verifikasipermohonan"
                                               app:cardCornerRadius="@dimen/dimen_12dp"
                                               app:cardElevation="0dp"
                                               style="@style/clickable"
                                               app:cardBackgroundColor="@color/grey_300"
                                               android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/ic_note"
                           android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="wrap_content"
                      android:textAlignment="center"
                      android:text="Verifikasi\nPermohonan"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="@dimen/dimen_8dp"
                      style="@style/Text.Standard"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                               android:layout_gravity="center_horizontal"
                                               android:id="@+id/card_verifikasipembayaran"
                                               app:contentPadding="@dimen/dimen_16dp"
                                               app:cardCornerRadius="@dimen/dimen_12dp"
                                               app:cardElevation="0dp"
                                               style="@style/clickable"
                                               app:cardBackgroundColor="@color/grey_300"
                                               android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/ic_pembayaran"
                           android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="wrap_content"
                      android:textAlignment="center"
                      android:text="Verifikasi\nPembayaran"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="@dimen/dimen_8dp"
                      style="@style/Text.Standard"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/dimen_16dp"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                               android:layout_gravity="center_horizontal"
                                               app:contentPadding="@dimen/dimen_16dp"
                                               android:id="@+id/card_finalisasidokumen"
                                               app:cardCornerRadius="@dimen/dimen_12dp"
                                               app:cardElevation="0dp"
                                               style="@style/clickable"
                                               app:cardBackgroundColor="@color/grey_300"
                                               android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/ic_verifikasipembayaran"
                           android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="wrap_content"
                      android:textAlignment="center"
                      android:text="Finalisasi\nDokumen"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="@dimen/dimen_8dp"
                      style="@style/Text.Standard"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                               android:id="@+id/card_pengesah"
                                               android:layout_gravity="center_horizontal"
                                               app:contentPadding="@dimen/dimen_16dp"
                                               app:cardCornerRadius="@dimen/dimen_12dp"
                                               app:cardElevation="0dp"
                                               style="@style/clickable"
                                               app:cardBackgroundColor="@color/grey_300"
                                               android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/ic_verifikasipembayaran"
                           android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="wrap_content"
                      android:textAlignment="center"
                      android:text="Pengesah"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="@dimen/dimen_8dp"
                      style="@style/Text.Standard"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>