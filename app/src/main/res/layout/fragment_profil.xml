<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/grey_200"
        android:layout_height="match_parent"
        tools:context=".app.main.profil.ProfilFragment">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_56dp"
            style="@style/AppTheme.AppBarCustom">
        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/AppTheme.AppBarCustom"
                    app:titleTextColor="@color/grey_700"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:id="@+id/toolbar_title"
                            style="@style/Text.HeaderTitle.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dimen_18dp"
                            android:textSize="@dimen/dimen_18dp"
                            android:text="Profil Saya"
                            android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_200"/>
    </RelativeLayout>
    <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <id.akakom.bimo.shareloc.utils.avatarview.views.AvatarView
                    android:id="@+id/avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            <LinearLayout
                    android:layout_margin="@dimen/dimen_16dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tv_name"
                            android:text="Hanung Bramantyo"
                            style="@style/Text.Standard.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tv_phone"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:text="0858665869950"
                            style="@style/Text.Standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

            </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/btn_riwayat_berbagi"
                    style="@style/clickable"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                            android:text="Riwayat Berbagi Lokasi"
                            android:layout_width="wrap_content"
                            style="@style/Text.Standard"
                            android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400"/>
            <LinearLayout
                    android:id="@+id/btn_riwayat_mengikuti"
                    android:orientation="vertical"
                    style="@style/clickable"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Riwayat Mengikuti Lokasi"
                        android:layout_width="wrap_content"
                        style="@style/Text.Standard"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_400"/>
            <LinearLayout
                    android:id="@+id/btn_logout"
                    style="@style/clickable"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Keluar"
                        android:layout_width="wrap_content"
                        style="@style/Text.Standard"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_400"/>
    </LinearLayout>
</LinearLayout>